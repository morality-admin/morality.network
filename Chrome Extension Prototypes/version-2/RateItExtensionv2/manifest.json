{
    "name": "Morality",
	"background": {
		"scripts": [
			"background/js/background.js"
		]
    },
	"browser_action": {
	   "default_icon": "img/logo-mo.png"
    },
	"icons": {
      "16": "img/logo-mo.png",
      "48": "img/logo-mo.png",
      "128": "img/logo-mo.png"
    },
    "description": "Morality is a platform on which users can quantify the reliability of any information theyâ€™re presented with and expose bias",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [ "<all_urls>"],
            "css":[
			"css/fa-regular.css",
			"css/fontawesome.css",
			"css/style.css"
			],
            "js":[
			"js/jquery-1.9.1.js",
			"js/jquery-ui.js",
			"background/js/balance_runner.js",
			"js/config.js",
			"js/jquery.sparkline.min.js",
			"index.js"
			]
        }
    ],
	"web_accessible_resources": [
		"background/js/*",
		"js/*",
		"css/*",
		"img/*"
    ],
    "permissions": [ 
		"identity",
        "identity.email",
		"<all_urls>", 
		"storage",
		"tabs", 
        "http://*/*" ]
}
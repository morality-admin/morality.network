<div id="login-div" class="login-div">
    <form>
        <div class="imgcontainer">
            <img src="https://i.postimg.cc/qBw4MjH0/logo.png"
                 alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" ondragstart="return false" draggable="false" required>

            <label><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" ondragstart="return false" draggable="false" required>

            <button type="submit">Login</button>
            <input type="checkbox" checked="checked"> Remember me
        </div>

        <div class="container" >
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
</div>
